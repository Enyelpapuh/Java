package ejercicio1;

import javax.swing.JOptionPane;
public class CiudadPorPais {

	public static void main(String[] args) {
		
		String[][] paisciudad= new String[4][4];
				
				for (int i = 0; i < 4; i++) {
					
					paisciudad[i][0] = JOptionPane.showInputDialog("Ingrese el nombre del pais "+(i+1)+":");
					
					for (int j = 1; j < 3; j++) {
						
						paisciudad[i][j] = JOptionPane.showInputDialog("Ingrese una cuidad para "+ paisciudad[i][0]+":");
						
					}
					
				}
				
				String mensaje = "";
				for (int i = 0; i < 4; i++) {
					mensaje +="ciudad de" + paisciudad[i][0]+": \n";
					for (int j = 0; j < 4; j++) {
						mensaje +="-"+ paisciudad[i][j]+"\n";
						
					}
					mensaje +="\n";
					
				}
				JOptionPane.showMessageDialog(null, mensaje);
	}

}
