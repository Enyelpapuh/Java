package ejercicio3;

import javax.swing.JOptionPane;

public class Encuesta {

    public static void main(String[] args) {

        String[] option1 = new String[] { "Masculino", "Femenino" };
        String[] option2 = new String[] { "Sí", "No" };

        int[] sexo = new int[10];
        int[] Trabaja = new int[10];
        double[] sueldo = new double[10];

        double mujeres = 0, mujeresT = 0, hombres = 0, hombresT = 0;
        double hsueldoT = 0, msueldoT = 0;

        for (int i = 0; i < 10; i++) {
            int sexos = JOptionPane.showOptionDialog(null, "Escoja su sexo", "Encuesta", JOptionPane.DEFAULT_OPTION,
                    JOptionPane.PLAIN_MESSAGE, null, option1, option1[0]);

            if (sexos == 1) {
                sexo[i] = 1;
            } else if (sexos == 2) {
                sexo[i] = 2;
            }

            int trabajos = JOptionPane.showOptionDialog(null, "¿Usted Trabaja?", "Encuesta", JOptionPane.DEFAULT_OPTION,
                    JOptionPane.PLAIN_MESSAGE, null, option2, option2[0]);

            if (trabajos == 0) {
                Trabaja[i] = 1;
            } else {
                Trabaja[i] = 2;
            }

            if (Trabaja[i] == 1) {
                sueldo[i] = Math.random() * (2000 - 600 + 1) + 600;

                if (sexo[i] == 1) {
                    hombresT++;
                    hsueldoT += sueldo[i];
                } else if (sexo[i] == 2) {
                    mujeresT++;
                    msueldoT += sueldo[i];
                }
            }
        }

        mujeres = (mujeresT / 10) * 100;
        hombres = (hombresT / 10) * 100;

        msueldoT = msueldoT / mujeresT;
        hsueldoT = hsueldoT / hombresT;

        String mensaje = String.format("El porcentaje de mujeres es: %.0f", mujeres);
        mensaje += String.format("\nEl porcentaje de hombres es: %.0f", hombres);
        mensaje += String.format("\nEl porcentaje de mujeres que trabajan es: %.0f", mujeresT * 10);
        mensaje += String.format("\nEl porcentaje de hombres que trabajan es: %.0f", hombresT * 10);
        mensaje += String.format("\nEl sueldo promedio de las mujeres que trabajan es: %.2f", msueldoT);
        mensaje += String.format("\nEl sueldo promedio de los hombres que trabajan es: %.2f", hsueldoT);

        JOptionPane.showMessageDialog(null, mensaje);
    }
}
