package ejercicio2;

import javax.swing.JOptionPane;

public class SumaDiagonal {

	public static void main(String[] args) {
		String inputstr;
		int tamMatriz;
		do {
		
		inputstr = JOptionPane.showInputDialog("Ingrese EL tamano de la raiz cuadrada");
		tamMatriz = Integer.parseInt(inputstr);
		
		if (tamMatriz <=0) {
			
			JOptionPane.showMessageDialog(null, 2, "la matriz debe ser de temaÃ±o positivo", tamMatriz);
			
		}
		}while(tamMatriz <= 0);
		

	}

}
